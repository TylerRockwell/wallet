<% provide(:title, "Index") %>


<div class="content">
  <p id="notice"><%= notice %></p>

  <h1>Listing Exchanges</h1>

  <table>
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Credit</th>
        <th>Debit</th>
        <th>Balance</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @exchanges.each do |exchange| %>
        <tr>
          <td><%= exchange.recipient %></td>
          <td>$<%= number_with_precision(exchange.credit, precision: 2) %></td>
          <td>$<%= number_with_precision(exchange.debit, precision: 2) %></td>
          <td>$<%= number_with_precision(exchange.balance, precision: 2) %></td>
          <td><%= link_to 'Show', exchange %></td>
          <td><%= link_to 'Edit', edit_exchange_path(exchange) %></td>
          <td><%= link_to 'Destroy', exchange, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Exchange', new_exchange_path %>

  <p><%= link_to 'Dashboard', root_path %></p>

  <p class="bottom"></p>

</div>
