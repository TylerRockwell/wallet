<% provide(:title, "Index") %>


<div class="content">
  <p id="notice"><%= notice %></p>

  <h1>Listing Exchanges</h1>

  <table>
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Credit</th>
        <th>Debit</th>
        <th>Balance</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @exchanges.each do |exchange| %>
        <%= render partial:"row", locals:{e: exchange} %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Exchange', new_exchange_path %>

  <p><%= link_to 'Dashboard', root_path %></p>

  <p class="bottom"></p>

</div>
